<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	<application>
		<view-handler>com.zhjin.sys.ZhjinViewHandler</view-handler>
	</application>
	<lifecycle>
		<phase-listener>com.zhjin.sys.ZjsysPhaseListener</phase-listener>
	</lifecycle>
	<component>    
		<component-type>zhjin.ui.SelectOneMenuValueOutput</component-type>    
		<component-class>com.zhjin.faces.custom.components.UISelectOneMenuValueOutput</component-class>
		<component-extension>
			<renderer-type>zhjin.ui.SelectOneMenuValueOutputRenderer</renderer-type>
		</component-extension>
	</component>
	<render-kit>    
		<renderer>      
			<component-family>zhjin.ui.SelectOneMenuValueOutput</component-family>
			<renderer-type>zhjin.ui.SelectOneMenuValueOutputRenderer</renderer-type>      
			<renderer-class>com.zhjin.faces.custom.renders.SelectOneMenuValueOutputRenderer</renderer-class>    
		</renderer>
	</render-kit>
	
</faces-config>
